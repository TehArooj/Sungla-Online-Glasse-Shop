@model PostMidProject.Models.Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    div, p {
        color: #BABECC;
        /* text-shadow: 1px 1px 1px #FFF;*/
    }

    form {
        padding: 16px;
        width: 320px;
        margin: 0 auto;
    }

    .segment {
        padding: 32px 0;
        text-align: center;
        margin-top: 100px;
    }

    button, input, label {
        border: 0;
        outline: 0;
        font-size: 16px;
        border-radius: 250px;
        padding: 16px;
        background-color: #F5F6F6;
        /*  text-shadow: 1px 1px 0 #FFF;*/
    }

    label {
        display: block;
        margin-bottom: 24px;
        width: 100%;
    }

    select {
        border: 0;
        outline: 0;
        font-size: 16px;
        border-radius: 250px;
        padding: 16px;
        background-color: #F5F6F6;
        text-shadow: 1px 1px 0 #FFF;
        margin-right: 8px;
        box-shadow: inset 2px 2px 5px #BABECC, inset -5px -5px 10px #FFF;
        width: 100%;
        box-sizing: border-box;
        transition: all 0.2s ease-in-out;
        appearance: none;
        -webkit-appearance: none;
    }

    textarea {
        border: 0;
        outline: 0;
        font-size: 16px;
        border-radius: 0px;
        padding: 16px;
        background-color: #F5F6F6;
        text-shadow: 1px 1px 0 #FFF;
        margin-right: 8px;
        box-shadow: inset 2px 2px 5px #BABECC, inset -5px -5px 10px #FFF;
        width: 100%;
        height: 200px;
        box-sizing: border-box;
        transition: all 0.2s ease-in-out;
        appearance: none;
        -webkit-appearance: none;
    }

    input {
        margin-right: 8px;
        box-shadow: inset 2px 2px 5px #BABECC, inset -5px -5px 10px #FFF;
        width: 100%;
        box-sizing: border-box;
        transition: all 0.2s ease-in-out;
        appearance: none;
        -webkit-appearance: none;
    }

        input:focus {
            box-shadow: inset 1px 1px 2px #BABECC, inset -1px -1px 2px #FFF;
        }

    button {
        color: #61677C;
        font-weight: bold;
        box-shadow: -5px -5px 20px #FFF, 5px 5px 20px #BABECC;
        transition: all 0.2s ease-in-out;
        cursor: pointer;
        font-weight: 600;
    }

        button:hover {
            box-shadow: -2px -2px 5px #FFF, 2px 2px 5px #BABECC;
        }

        button:active {
            box-shadow: inset 1px 1px 2px #BABECC, inset -1px -1px 2px #FFF;
        }

        button .icon {
            margin-right: 8px;
        }

        button.unit {
            border-radius: 8px;
            line-height: 0;
            width: 48px;
            height: 48px;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            margin: 0 8px;
            font-size: 19.2px;
        }

            button.unit .icon {
                margin-right: 0;
            }

        button.black {
            display: block;
            width: 100%;
            color: 252525;
        }

    .input-group {
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }

        .input-group label {
            margin: 0;
            flex: 1;
        }
</style>

<body class="main-layout position_head">
    <form method="post" action="/Admin/UpdateProductConfirm/@Model.Product_Id">

        <div class="custom_label">
            <h1>Update Product</h1>
        </div>
        <label>
            <input type="text" placeholder="Product Name" value="@Model.Product_Name" name="name" />
        </label>
        <label>
            <input type="text" placeholder="Price" value="@Model.Price" name="price" />
        </label>
        @*<label>
                <input type="text" placeholder="Quantity" value="@Model.Quantity" name="qty" />
            </label>*@
        @*<label>
                <input type="file" placeholder="Add Image" value="@Model.Image" name="image" />
            </label>*@
        <button class="black" type="submit">Update</button>


    </form>

    <!-- Javascript files-->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery-3.0.0.min.js"></script>
    <!-- sidebar -->
    <script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/custom.js"></script>

</body>
