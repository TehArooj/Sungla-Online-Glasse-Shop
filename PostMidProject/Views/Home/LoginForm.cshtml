
<style>
    @Html.Raw("@")import url("https://fonts.googleapis.com/css?family=Martel+Sans&display=swap");
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        /*font-family: "Martel Sans", sans-serif;*/
    }
    .center-align-card {
        background-color: #f5f6fa;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }
    .card {
        background-color: transparent;
        width: 25%;
        height: 600px;
        border: 1px solid #f1f1f1;
        perspective: 1000px;
    }
    .card .inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.8s;
        transform-style: preserve-3d;
        border-top: 2px solid #03CAFC;
        border-radius: 5px;
        box-shadow: 6px 7px 54px -26px rgba(0, 0, 0, 0.31);
    }
    .card.rotate .inner {
        transform: rotateY(180deg);
    }
    .card .signup, .card .login {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        border-radius: 5px;
        padding: 12px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    .card .signup h3, .card .login h3 {
        margin-bottom: 2rem;
        font-size: 20px;
    }
    .card .signup form .form-control2, .card .login form .form-control2 {
        margin-bottom: 1rem;
        position: relative;
        width: 100%;
    }
    .card .signup form .form-control2 input, .card .login form .form-control2 input {
        display: block;
        border: none;
        border-bottom: 2px solid #000;
        outline: none;
        font-size: 14px;
        margin-bottom: 32px;
        width: 100%;
    }
    .card .signup form .form-control2 input:focus, .card .login form .form-control2 input:focus, .card .signup form .form-control2 input:valid, .card .login form .form-control2 input:valid {
        border-bottom: 2px solid #03CAFC;
    }
    .card .signup form .form-control2 input:focus + label, .card .login form .form-control2 input:focus + label, .card .signup form .form-control2 input:valid + label, .card .login form .form-control2 input:valid + label {
        transform: translateY(-25px);
        color: #03CAFC;
    }
    .card .signup form .form-control2 label, .card .login form .form-control2 label {
        position: absolute;
        top: 0;
        left: 0;
        transition: 0.3s;
        font-size: 14px;
    }
    .card .signup form button, .card .login form button {
        border: none;
        background-color: #03CAFC;
        color: #fff;
        padding: 6px 30px;
        border-radius: 3px;
        font-size: 16px;
        cursor: pointer;
        text-transform: uppercase;
    }
    .card .signup form a, .card .login form a {
        display: block;
        font-size: 16px;
        margin-top: 2rem;
        cursor: pointer;
        color: #03CAFC;
    }
    .card .signup form a:hover, .card .login form a:hover {
        text-decoration: underline;
    }
    .card .login {
        background-color: #fff;
    }
    .card .signup {
        background-color: #fff;
        transform: rotateY(180deg);
    }
    @Html.Raw("@")media screen and (max-width: 1200px) {
        .card {
            width: 35%;
        }
    }
    @Html.Raw("@")media screen and (max-width: 820px) {
        .card {
            width: 50%;
        }
    }
    @Html.Raw("@")media screen and (max-width: 600px) {
        .card {
            width: 60%;
        }
    }
    @Html.Raw("@")media screen and (max-width: 450px) {
        .card {
            width: 70%;
        }
    }
    @Html.Raw("@")media screen and (max-width: 320px) {
        .card {
            width: 80%;
        }
    }

    .a-span {
        color: #03CAFC;
        cursor: pointer;
    }

    .rotation-text {
        margin-top: 20px;
    }

</style>

<body class="main-layout position_head">
    <div class="center-align-card">

        <div class="card">
            <div class="inner">
                <div class="login">
                    <form id="form1" method="post" action="/home/loginpost">
                        <h3>Login</h3>
                        <div class="form-control2">
                            <input id="email" type="email" autocomplete="off" name="email" required />
                            <label for="email">Email</label>
                        </div>
                        <div class="form-control2">
                            <input id="password" type="password" name="password" required />
                            <label for="password">Password</label>
                        </div>
                        <button id="submit">Login</button>

                        <div class="rotation-text">Don't have an account? <span class="a-span" id="signup">Register</span> </div>
                    </form>
                </div>
                <div class="signup">
                    <h3>Create an account</h3>
                    <form id="form2" method="post" action="/home/signuppost">
                        <div class="form-control2">
                            <input id="email" type="email" autocomplete="off" name="email" required />
                            <label for="email">Email</label>
                        </div>
                        <div class="form-control2">
                            <input id="name" type="text" autocomplete="off" name="name" required />
                            <label for="name">Name</label>
                        </div>
                        <div class="form-control2">
                            <input id="phone" type="text" name="phone" required />
                            <label for="phone">Phone</label>
                        </div>
                        <div class="form-control2">
                            <input id="password" type="password" name="password" required />
                            <label for="password_">Password</label>
                        </div>
                        <div class="form-control2">
                            <input id="cpassword" type="password" name="cpassword" required />
                            <label for="confirm_pass">Confirm Password</label>
                        </div>
                        <button id="submit2">Signup</button>

                        <div class="rotation-text">Already have an account? <span class="a-span" id="login">Login</span> </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <script>
        const card = document.querySelector(".card");

        document.querySelector("#login").addEventListener("click", () => {
            card.classList.remove("rotate");
        });
        document.querySelector("#signup").addEventListener("click", () => {
            card.classList.add("rotate");
        });

    </script>
</body>