

@model List<PostMidProject.Models.Order>

@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<body class="main-layout position_head">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Order No.</th>
                <th scope="col">Date</th>
                <th scope="col">Product No.</th>
                <th scope="col">Price</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.Order_Id</td>
                    <td>@o.Date</td>
                    <td>@o.Product.Product_Name</td>
                    <td>@o.Total_Amount</td>
                    <td>
                        @{
                            switch (o.Status)
                            {
                                case 1:
                                    <text>
                                        New
                                    </text>
                                    break;
                                case 2:
                                    <text>
                                        Delivered
                                    </text>
                                    break;
                                case 3:
                                    <text>
                                        Canceled
                                    </text>
                                    break;
                                default:
                                    <text>
                                        New
                                    </text>
                                    break;
                            }
                        }
                    </td>
                    <td style="text-align:center;">
                        @{if (o.Status == 1)
                            {
                                <text><a class="action-btn" href="/Customer/CancelOrder/@o.Order_Id">Cancel</a></text>
                            }
                            else
                            {
                                <text>

                                </text>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <!-- Javascript files-->
    @*<script>
            function cancel() {
                alert('Order Cancelled');
            }
        </script>*@
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery-3.0.0.min.js"></script>
    <!-- sidebar -->
    <script src="~/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/custom.js"></script>

    <script src="~/js/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {
            $.urlParam = function (name) {
                var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
                if (results !== null) {
                    return decodeURI(results[1]) || 0;
                }
                return '';
            }

            if ($.urlParam('canceled') == '1') {
                swal("Order canceled successfully.", "", "success");
            } else if ($.urlParam('canceled') == '0') {
                swal("An error occured while canceling Order.", "", "error");
            }
        });
    </script>

</body>

